{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wiki Facts",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "statement": {"type": "string"},
      "confidence": {"type": "number"},
      "sources": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["statement"],
    "additionalProperties": true
  }
}